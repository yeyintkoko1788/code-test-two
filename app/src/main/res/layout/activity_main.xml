<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.yeyint.movieapp.presentation.home.HomeViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.HomeActivity">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_what_are_you_looking_for"
        android:fontFamily="@font/chivo_black"
        android:textSize="@dimen/text_regular_3x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_medium_2"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_xlarge"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_trending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_trending_now"
                android:fontFamily="@font/chivo_regular"
                android:textSize="@dimen/text_regular_2x"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_medium_2"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_trending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_trending"
                app:layout_constraintEnd_toEndOf="parent"
                android:minHeight="180dp"
                app:trendingList="@{viewModel.trending_movie_list}"
                app:favouriteList="@{viewModel.favourite_movie}"
                android:paddingStart="@dimen/margin_medium_2"
                android:paddingEnd="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:clipToPadding="false"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="@+id/rv_trending"
                app:layout_constraintBottom_toBottomOf="@id/rv_trending"
                app:layout_constraintEnd_toEndOf="@id/rv_trending"
                app:layout_constraintTop_toTopOf="@+id/rv_trending"
                android:visibility="@{viewModel.trending_error_visibility? View.VISIBLE : View.GONE}">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_error_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_regular_2x"
                    android:textColor="@color/primary_text"
                    android:text="@{viewModel.trending_error}"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/margin_medium_3"
                    android:layout_marginEnd="@dimen/margin_medium_3" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:onClick="@{() -> viewModel.getTrendingMovie()}"
                    android:src="@drawable/ic_baseline_refresh_24"
                    app:tint="@color/primary_text"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/pg_trending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.trending_loading ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@+id/rv_trending"
                app:layout_constraintBottom_toBottomOf="@id/rv_trending"
                app:layout_constraintEnd_toEndOf="@id/rv_trending"
                app:layout_constraintTop_toTopOf="@+id/rv_trending"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_upcomming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_upcomming_movie"
                android:fontFamily="@font/chivo_regular"
                android:textSize="@dimen/text_regular_2x"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_trending"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_medium_2"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_upcomming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:minHeight="180dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_upcomming"
                app:upcomingList="@{viewModel.comming_movie_list}"
                app:favouriteList="@{viewModel.favourite_movie}"
                android:paddingStart="@dimen/margin_medium_2"
                android:paddingEnd="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="@+id/rv_upcomming"
                app:layout_constraintBottom_toBottomOf="@id/rv_upcomming"
                app:layout_constraintEnd_toEndOf="@id/rv_upcomming"
                app:layout_constraintTop_toTopOf="@+id/rv_upcomming"
                android:visibility="@{viewModel.comming_error_visibility? View.VISIBLE : View.GONE}">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_regular_2x"
                    android:textColor="@color/primary_text"
                    android:text="@{viewModel.comming_error}"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/margin_medium_3"
                    android:layout_marginEnd="@dimen/margin_medium_3" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:onClick="@{() -> viewModel.getUpcomingMovie()}"
                    android:src="@drawable/ic_baseline_refresh_24"
                    app:tint="@color/primary_text"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/pg_upcomming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.comming_loading ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@+id/rv_upcomming"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/rv_upcomming"
                app:layout_constraintTop_toTopOf="@+id/rv_upcomming"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>