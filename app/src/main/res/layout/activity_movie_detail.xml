<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="movieId"
            type="Integer" />
        <variable
            name="viewModel"
            type="com.yeyint.movieapp.presentation.moviedetail.MovieDetailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/color_primary"
            android:fitsSystemWindows="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:imageUrl="@{viewModel.movieDetail.backdrop_path}"
                    app:layout_constraintDimensionRatio="@string/photo_landscape_ration"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:layout_marginTop="30dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_favourite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:onClick="@{()->viewModel.setFavourite(viewModel.movieDetail.id,viewModel.movieDetail.favourite)}"
                    app:setFavourite="@{viewModel.movieDetail.favourite}"
                    android:layout_toStartOf="@+id/iv_share"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:layout_gravity="end"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.detail_visibility? View.VISIBLE : View.GONE}"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chivo_regular"
                    android:textSize="@dimen/text_regular_3x"
                    android:text="@{viewModel.movieDetail.original_title}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="@dimen/margin_medium_2"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_favorite_24"
                    app:layout_goneMarginTop="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium"
                    app:layout_constraintEnd_toStartOf="@+id/tv_audient"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/color_red"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_audient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@{viewModel.movieDetail.vote_average + `%`}"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:layout_marginStart="@dimen/margin_medium"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@{viewModel.movieDetail.release_date}"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_regular"
                    android:layout_marginStart="@dimen/margin_medium_2"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_gender"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_height="wrap_content"
                    app:setGenresText="@{viewModel.movieDetail.genres}"
                    app:layout_constraintTop_toBottomOf="@id/tv_release_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_origin"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:textColor="@color/color_accent"
                    android:textSize="@dimen/text_regular"
                    android:layout_marginStart="@dimen/margin_medium_2"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:setLanguageText="@{viewModel.movieDetail.spoken_languages}"
                    app:layout_constraintTop_toTopOf="@+id/tv_gender"
                    app:layout_constraintBottom_toBottomOf="@id/tv_gender"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_regular"
                    android:layout_marginStart="@dimen/margin_medium_2"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_movie_desc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie Description"
                    android:fontFamily="@font/chivo_regular"
                    android:textSize="@dimen/text_regular_2x"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_gender"
                    android:layout_margin="@dimen/margin_medium_2"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@{viewModel.movieDetail.overview}"
                    app:layout_constraintTop_toBottomOf="@id/tv_movie_desc_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_regular_2x"
                    android:layout_marginStart="@dimen/margin_medium_2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="@{viewModel.error_visibility? View.VISIBLE : View.GONE}">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_regular_2x"
                android:textColor="@color/primary_text"
                android:text="@{viewModel.movie_detail_error}"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/margin_medium_3"
                android:layout_marginEnd="@dimen/margin_medium_3" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:onClick="@{() -> viewModel.getMovieDetail(movieId)}"
                android:src="@drawable/ic_baseline_refresh_24"
                app:tint="@color/primary_text"
                android:layout_gravity="center"/>
        </LinearLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewModel.movie_detail_loading ? View.VISIBLE : View.GONE}"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>